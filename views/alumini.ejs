    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const openFormBtn = document.getElementById('openFormModal');
            const closeFormBtn = document.getElementById('closeFormModal');
            const formModal = document.getElementById('formModal');
            const formContainer = document.querySelector('.alum-form-container');
            const alumForm = document.getElementById('alumForm');
        
            // Open modal
            openFormBtn.addEventListener('click', () => {
                formModal.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
        
            // Close modal
            closeFormBtn.addEventListener('click', () => {
                formModal.classList.remove('active');
                document.body.style.overflow = '';
            });
        
            // Click outside modal to close
            formModal.addEventListener('click', (e) => {
                if (e.target === formModal) {
                    formModal.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        
            // Prevent click inside container from closing modal
            formContainer.addEventListener('click', (e) => e.stopPropagation());
        
            // Escape key to close modal
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && formModal.classList.contains('active')) {
                    formModal.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        
            // AJAX form submit
            alumForm.addEventListener('submit', async function (e) {
                e.preventDefault();
        
                const formData = new FormData(alumForm);
        
                try {
                    const response = await fetch('/alumini', {
                        method: 'POST',
                        body: formData
                    });
        
                    if (response.ok) {
                        const result = await response.json();
                        alert("üéâ Thank you for your submission!");
                        alumForm.reset();
                        formModal.classList.remove('active');
                        document.body.style.overflow = '';
                    } else {
                        alert("‚ùå Something went wrong. Please try again.");
                    }
                } catch (error) {
                    console.error(error);
                    alert("‚ùå Submission failed. Please check your internet or contact support.");
                }
            });
        });
