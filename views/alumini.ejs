    <div class="alumni-container">
        <button class="alum-register-btn" id="openFormModal" style="margin-top: 20px;">
            <i class="fas fa-user-plus"></i>
            Drop Your Thoughts
        </button>
        <!-- modal -->

        <div class="alum-modal-overlay" id="formModal">
            <div class="alum-form-container">
                <button class="alum-form-close" id="closeFormModal">
                    <i class="fas fa-times"></i>
                </button>

                <div class="alum-form-header">
                    <h2>Join Our Alumni Network</h2>
                    <p>Share your journey and stay connected with fellow graduates</p>
                </div>

                <form class="alum-form" id="alumForm" enctype="multipart/form-data">

                    <div class="alum-form-group">
                      <label for="alum-name" class="alum-form-label">Full Name</label>
                      <div class="alum-form-input-wrapper">
                        <i class="fas fa-user alum-form-icon"></i>
                        <input type="text" name="name" id="alum-name" class="alum-form-input alum-form-input-icon" placeholder="Your full name" required>
                      </div>
                    </div>
                  
                    <div class="alum-form-group">
                      <label for="alum-email" class="alum-form-label">Email Address</label>
                      <div class="alum-form-input-wrapper">
                        <i class="fas fa-envelope alum-form-icon"></i>
                        <input type="email" name="email" id="alum-email" class="alum-form-input alum-form-input-icon" placeholder="Your email address" required>
                      </div>
                    </div>
                  
                    <div class="alum-form-group">
                      <label for="alum-phone" class="alum-form-label">Phone Number</label>
                      <div class="alum-form-input-wrapper">
                        <i class="fas fa-phone-alt alum-form-icon"></i>
                        <input type="tel" name="phone" id="alum-phone" class="alum-form-input alum-form-input-icon" placeholder="Your phone number">
                      </div>
                    </div>
                  
                    <div class="alum-form-group">
                      <label for="alum-graduation-date" class="alum-form-label">Graduation Date</label>
                      <div class="alum-form-input-wrapper">
                        <i class="fas fa-calendar-alt alum-form-icon"></i>
                        <input type="date" name="date" id="alum-graduation-date" class="alum-form-input alum-form-input-icon" required>
                      </div>
                    </div>
                    <div class="alum-form-group">
                        <label for="alum-current-position" class="alum-form-label">Current Position</label>
                        <div class="alum-form-input-wrapper">
                          <i class="fas fa-briefcase alum-form-icon"></i>
                          <input type="text" name="currentPosition" id="alum-current-position" class="alum-form-input alum-form-input-icon"
                            placeholder="e.g., Software Engineer at Google">
                        </div>
                      </div>
                      
                    <div class="alum-form-group full-width">
                      <label for="alum-thoughts" class="alum-form-label">Your Thoughts</label>
                      <textarea name="message" id="alum-thoughts" class="alum-form-textarea" placeholder="Share your experience and achievements after graduation"></textarea>
                    </div>
                  
                    <div class="alum-form-group full-width">
                      <label class="alum-form-label">Profile Picture</label>
                      <div class="alum-form-file-wrapper">
                        <i class="fas fa-camera alum-form-file-icon"></i>
                        <span class="alum-form-file-label">Upload Your Photo</span>
                        <input type="file" name="Profilepic" class="alum-form-file" accept="image/*" required>
                      </div>
                    </div>
                  
                    <button type="submit" class="alum-form-submit gap-3">Submit Your Thoughts</button>
                  </form>
                  
