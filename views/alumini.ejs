        <div class="alumni-header">
            <h1>Our Distinguished Alumni</h1>
            <p>Meet our accomplished graduates who are making a difference across various industries worldwide.</p>
        </div>

        <div class="alumni-cards">
            <% alumini.forEach(alum => { %>
              <div class="alumni-card rounded">
                <div class="alumni-image-container">
                  <img src="<%= alum.profilePic %>" alt="<%= alum.name %>" class="alumni-image">
                  <div class="alumni-image-overlay"></div>
                </div>
                <div class="alumni-content">
                  <h3 class="alumni-name"><%= alum.name %></h3>
                  <p class="alumni-designation">
                    <i class="fas fa-briefcase"></i> <%= alum.currentPosition %>
                  </p>
                  <p class="alumni-quote"><%= alum.message %></p>
                  <div class="alumni-footer">
                    <span class="alumni-batch">
                      <i class="fas fa-graduation-cap"></i> Class of <%= alum.batch %>
                    </span>
                    <span class="alumni-date">
                      <i class="far fa-calendar-alt"></i>
                      <%= alum.date.toDateString() %> <!-- Format as needed -->
                    </span>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
          <div class="pagination">
            <% if (currentPage > 1) { %>
              <a href="/alumini?page=<%= currentPage - 1 %>">&laquo; Previous</a>
            <% } %>
          
            <% for (let i = 1; i <= totalPages; i++) { %>
              <a href="/alumini?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
            <% } %>
          
            <% if (currentPage < totalPages) { %>
              <a href="/alumini?page=<%= currentPage + 1 %>">Next &raquo;</a>
            <% } %>
          </div>
          
