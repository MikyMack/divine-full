                            const form = document.getElementById('bannerForm');
                            const modalTitle = document.getElementById('modalTitle');
                            
                            if (banner) {
                                modalTitle.textContent = 'Edit Banner';
                                document.getElementById('bannerId').value = banner._id;
                                document.getElementById('title').value = banner.title;
                                document.getElementById('isActive').checked = banner.isActive !== false;
                                
                                // Show image preview if exists
                                const imagePreview = document.getElementById('imagePreview');
                                if (banner.image) {
                                    imagePreview.innerHTML = `<img src="${banner.image}" alt="Current Banner" style="max-width: 200px; max-height: 150px;">`;
                                } else {
                                    imagePreview.innerHTML = '';
                                }
                            } else {
                                modalTitle.textContent = 'Add New Banner';
                                form.reset();
                                document.getElementById('imagePreview').innerHTML = '';
                            }
                            
                            modal.style.display = 'flex';
                        }
                
                        function closeModal() {
                            document.getElementById('bannerModal').style.display = 'none';
                        }
                
                        // Image preview
                        document.getElementById('banner').addEventListener('change', function(e) {
                            const file = e.target.files[0];
                            if (file) {
                                const reader = new FileReader();
                                reader.onload = function(event) {
                                    document.getElementById('imagePreview').innerHTML = 
                                        `<img src="${event.target.result}" alt="Preview" style="max-width: 200px; max-height: 150px;">`;
                                };
                                reader.readAsDataURL(file);
                            }
                        });
                
                        // Banner CRUD operations
                        async function saveBanner() {
                            const form = document.getElementById('bannerForm');
                            const formData = new FormData(form);
                            const bannerId = document.getElementById('bannerId').value;
                            const url = bannerId ? `/banner/${bannerId}` : '/banner';
                            const method = bannerId ? 'PUT' : 'POST';
                
                            try {
                                const response = await fetch(url, {
                                    method: method,
                                    body: formData
                                });
                
                                const result = await response.json();
                
                                if (response.ok) {
                                    alert(bannerId ? 'Banner updated successfully!' : 'Banner created successfully!');
                                    window.location.reload();
                                } else {
                                    throw new Error(result.message || 'Failed to save banner');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        async function editBanner(id) {
                            try {
                                const response = await fetch(`/banner/${id}`);
                                const banner = await response.json();
                
                                if (response.ok) {
                                    openModal(banner);
                                } else {
                                    throw new Error(banner.message || 'Failed to fetch banner');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        function confirmDelete(id) {
                            const modal = document.getElementById('confirmModal');
                            modal.style.display = 'flex';
                
                            document.getElementById('confirmMessage').textContent = 'Are you sure you want to delete this banner? This action cannot be undone.';
                
                            document.getElementById('confirmActionButton').onclick = function() {
                                deleteBanner(id);
                            };
                        }
                
                        async function deleteBanner(id) {
                            try {
                                const response = await fetch(`/banner/${id}`, {
                                    method: 'DELETE'
                                });
                
                                const result = await response.json();
                
                                if (response.ok) {
                                    alert('Banner deleted successfully!');
                                    document.getElementById(`banner-${id}`).remove();
                                    closeConfirmModal();
                                    
                                    // Update showing info
                                    updateShowingInfo();
                                } else {
                                    throw new Error(result.message || 'Failed to delete banner');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        async function toggleStatus(id, currentStatus) {
                            try {
                                const response = await fetch(`/banner/toggle/${id}`, {
                                    method: 'PATCH'
                                });
                
                                const result = await response.json();
                
                                if (response.ok) {
                                    // Update the UI without reloading
                                    const toggleInput = document.querySelector(`#banner-${id} .toggle-input`);
                                    toggleInput.checked = !currentStatus;
                                } else {
                                    throw new Error(result.message || 'Failed to update status');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        function closeConfirmModal() {
                            document.getElementById('confirmModal').style.display = 'none';
                        }
                
                        function updateShowingInfo() {
                            const bannerCount = document.querySelectorAll('#bannersList li.wg-product').length;
                            document.getElementById('showingInfo').textContent = `Showing ${bannerCount} entries`;
                        }
                
                        // Close modals when clicking outside
                        window.onclick = function(event) {
                            const bannerModal = document.getElementById('bannerModal');
                            const confirmModal = document.getElementById('confirmModal');
                            
                            if (event.target === bannerModal) {
                                bannerModal.style.display = 'none';
                            }
                            if (event.target === confirmModal) {
                                confirmModal.style.display = 'none';
                            }
                        };
                
                        // Search functionality
                        document.getElementById('searchForm').addEventListener('submit', function(e) {
                            e.preventDefault();
                            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
                            
                            document.querySelectorAll('#bannersList li.wg-product').forEach(banner => {
                                const title = banner.querySelector('.body-text').textContent.toLowerCase();
                                
                                if (title.includes(searchTerm)) {
                                    banner.style.display = 'flex';
                                } else {
                                    banner.style.display = 'none';
                                }
                            });
                        });
                
