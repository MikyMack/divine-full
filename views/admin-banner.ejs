    <style>
        .wg-table ul.wg-product {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }
        .wg-table .image img {
            width: 100px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
        }
        .list-icon-function {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .list-icon-function .item {
            cursor: pointer;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
            transition: all 0.2s;
        }
        .list-icon-function .item:hover {
            background: #f0f0f0;
        }
        .list-icon-function .item.edit {
            color: #2196F3;
        }
        .list-icon-function .item.trash {
            color: #f44336;
        }
        .toggle-container {
            margin-left: 10px;
        }
        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }
        .toggle-input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 24px;
        }
        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        .toggle-input:checked + .toggle-slider {
            background-color: #4CAF50;
        }
        .toggle-input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }
        .no-banners {
            text-align: center;
            padding: 40px;
            color: #666;
        }
    </style>
