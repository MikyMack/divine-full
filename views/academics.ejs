    <section class="space-top space-extra-bottom">
        <div class="container">
          <div class="row gx-50 gy-gx">
            <% academics.forEach(academic => { %>
              <div class="col-md-6">
                <div class="class-style1 ">
                  <div class="class-img">
                    <a href="/academicsDetails/<%= academic._id %>">
                      <img src="<%= academic.image %>" alt="<%= academic.title %>" style="object-fit: cover;" class="acd-img">
                    </a>
                  </div>
                  <div class="class-content">
                    <h3 class="class-title">
                      <a class="text-inherit" href="/academicsDetails/<%= academic._id %>">
                        <%= academic.title %>
                      </a>
                    </h3>
                    <p class="class-info">Available: <span class="info"><%= academic.availableSeats %> Seats</span></p>
                    <p class="class-info">Required Age: <span class="info"><%= academic.requiredAge %></span></p>
      
                    <% const shortDesc = academic.description.length > 150 ? academic.description.slice(0, 150) + '...' : academic.description; %>
                    <p class="acad-dis"><%= shortDesc %></p>
      
                    <a href="/academicsDetails/<%= academic._id %>" class="class-btn">
                      <i class="far fa-plus"></i> 
                    </a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
      
          <!-- Pagination -->
          <div class="text-center mt-30">
            <div class="vs-pagination pt-md-3">
              <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="pagi-btn">Prev</a>
              <% } %>
      
              <ul>
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li><a class="<%= currentPage === i ? 'active' : '' %>" href="?page=<%= i %>"><%= i %></a></li>
                <% } %>
              </ul>
      
              <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="pagi-btn">Next</a>
              <% } %>
            </div>
          </div>
        </div>
