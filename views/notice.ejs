            <div class="row d-flex flex-wrap align-items-stretch">

                <% notices.forEach((notice, index) => { %>
                    <div class="col-xl-4 col-lg-12 col-sm-12 d-flex">

                        <div class="blog-card8 style4 notice-card">
                            <div class="blog-body">
                                <div class="blog-content">
                                    <span class="blog-date">
                                        <%= notice.date.toLocaleString('en-US', { month: 'short' }).toUpperCase() %>
                                        <span><%= new Date(notice.date).getDate() %></span>
                                    </span>
                                    
                                    <!-- Title Show More -->
                                    <% const titleWords = notice.title.split(' '); %>
                                    <h4 class="blog-title">
                                        <span id="title-short-<%= index %>">
                                            <%= titleWords.slice(0, 4).join(' ') %>
                                            <% if (titleWords.length > 4) { %>...<% } %>
                                        </span>
                                        <% if (titleWords.length > 4) { %>
                                            <span id="title-full-<%= index %>" style="display:none;"><%= notice.title %></span>
                                            <a href="javascript:void(0);" style="color: #b6b6b6; font-size: small;" class="show-toggle" onclick="toggleText('title', <%= index %>)">Show More</a>
                                        <% } %>
                                    </h4>
            
                                    <!-- Description Show More -->
                                    <% const descWords = notice.description.split(' '); %>
                                    <p class="blog-text">
                                        <span id="desc-short-<%= index %>">
                                            <%= descWords.slice(0, 8).join(' ') %>
                                            <% if (descWords.length > 8) { %>...<% } %>
                                        </span>
                                        <% if (descWords.length > 8) { %>
                                            <span id="desc-full-<%= index %>" style="display:none;"><%= notice.description %></span>
                                            <a href="javascript:void(0);" style="color: #b6b6b6;" class="show-toggle" onclick="toggleText('desc', <%= index %>)">Show More</a>
                                        <% } %>
                                    </p>
            
                                    <% if (notice.posterUrl) { %>
                                        <div class="blog-thumb fixed-thumb">
                                            <img src="<%= notice.posterUrl %>" loading="lazy" alt="Notice Poster" style="width: 400px; object-fit: cover;" />
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <script>
                function toggleText(type, index) {
                    const shortEl = document.getElementById(`${type}-short-${index}`);
                    const fullEl = document.getElementById(`${type}-full-${index}`);
                    const btn = document.getElementById(`${type}-btn-${index}`);
            
                    if (shortEl.style.display === "none") {
                        shortEl.style.display = "inline";
                        fullEl.style.display = "none";
                        btn.textContent = "Show More";
                    } else {
                        shortEl.style.display = "none";
                        fullEl.style.display = "inline";
                        btn.textContent = "Show Less";
                    }
                }
            </script>
            
            
