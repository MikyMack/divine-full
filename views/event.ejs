                <% if (events.length === 0) { %>
                    <div class="col-12 text-center">
                        <h4 class="text-danger">No active events found.</h4>
                    </div>
                <% } else { %>
                    <% events.forEach(event => { %>
                        <div class="col-xl-4 col-md-6 mb-4 d-flex">
                            <div class="vs-blog blog-style1 d-flex flex-column w-100" style="min-height: 550px;">
                          
                              <!-- Image -->
                              <div class="blog-img" style="height: 250px; overflow: hidden;">
                                <img src="<%= event.image %>" loading="lazy" alt="<%= event.title %>" style="width: 100%; height: 100%; object-fit: cover;">
                              </div>
                          
                              <!-- Content -->
                              <div class="blog-content flex-grow-1 d-flex flex-column">
                                <!-- Date -->
                                <span class="blog-date">
                                  <i class="fal fa-calendar-alt"></i>
                                  <%= event.date.toDateString() %>
                                </span>
                          
                                <!-- Title -->
                                <h3 class="blog-title h5">
                                  <a href="#"><%= event.title %></a>
                                </h3>
                          
                                <!-- Description with Read More -->
                                <p class="blog-text">
                                  <span class="short-desc"><%= event.description.substring(0, 120) %></span>
                                  <span class="full-desc d-none"><%= event.description %></span>
                                  <% if (event.description.length > 120) { %>
                                    <button class="btn btn-link p-0 read-more-btn">Read More</button>
                                  <% } %>
                                </p>
                          
                                <!-- Additional Fields -->
                                <p class="mb-1"><strong>Place:</strong> <%= event.eventPlace %></p>
                                <p class="mb-1"><strong>Coordinator:</strong> <%= event.coordinatorName %></p>
                                <p class="mb-3"><strong>Contact:</strong> <%= event.coordinatorContact %></p>
                              </div>
                          
                              <!-- Button -->
                              <a href="/contact" class="vs-btn d-flex justify-content-center mt-auto">
                                Register Now <i class="far fa-angle-right"></i>
                              </a>
                          
                            </div>
                          </div>
                          
                    <% }); %>
                <% } %>
    
            </div>
    
            <% if (totalPages > 1) { %>
            <div class="text-center">
                <div class="vs-pagination pt-md-3">
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>" class="pagi-btn">Prev</a>
                    <% } %>
    
                    <ul>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li>
                                <a class="<%= currentPage === i ? 'active' : '' %>" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
    
                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>" class="pagi-btn">Next</a>
                    <% } %>
                </div>
            </div>
            <% } %>
