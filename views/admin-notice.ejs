                    <script>
                        // Modal functions
                        function openModal(notice = null) {
                            const modal = document.getElementById('noticeModal');
                            const form = document.getElementById('noticeForm');
                            const modalTitle = document.getElementById('modalTitle');
                            
                            if (notice) {
                                modalTitle.textContent = 'Edit Notice';
                                document.getElementById('noticeId').value = notice._id;
                                document.getElementById('title').value = notice.title;
                                document.getElementById('date').value = new Date(notice.date).toISOString().split('T')[0];
                                document.getElementById('description').value = notice.description;
                                
                                // Show image preview if exists
                                const imagePreview = document.getElementById('imagePreview');
                                if (notice.posterUrl) {
                                    imagePreview.innerHTML = `<img src="${notice.posterUrl}" alt="Current Poster" style="max-width: 200px; max-height: 150px;">`;
                                } else {
                                    imagePreview.innerHTML = '';
                                }
                            } else {
                                modalTitle.textContent = 'Add New Notice';
                                form.reset();
                                document.getElementById('imagePreview').innerHTML = '';
                            }
                            
                            modal.style.display = 'flex';
                        }
                
                        function closeModal() {
                            document.getElementById('noticeModal').style.display = 'none';
                        }
                
                        // Image preview
                        document.getElementById('notice').addEventListener('change', function(e) {
                            const file = e.target.files[0];
                            if (file) {
                                const reader = new FileReader();
                                reader.onload = function(event) {
                                    document.getElementById('imagePreview').innerHTML = 
                                        `<img src="${event.target.result}" alt="Preview" style="max-width: 200px; max-height: 150px;">`;
                                };
                                reader.readAsDataURL(file);
                            }
                        });
                
                        // Notice CRUD operations
                        async function saveNotice() {
                            const form = document.getElementById('noticeForm');
                            const formData = new FormData(form);
                            const noticeId = document.getElementById('noticeId').value;
                            const url = noticeId ? `/notice/${noticeId}` : '/notice';
                            const method = noticeId ? 'PUT' : 'POST';
                
                            try {
                                const response = await fetch(url, {
                                    method: method,
                                    body: formData
                                });
                
                                const result = await response.json();
                
                                if (response.ok) {
                                    alert(noticeId ? 'Notice updated successfully!' : 'Notice created successfully!');
                                    window.location.reload();
                                } else {
                                    throw new Error(result.message || 'Failed to save notice');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        async function editNotice(id) {
                            try {
                                const response = await fetch(`/notice/${id}`);
                                const notice = await response.json();
                
                                if (response.ok) {
                                    openModal(notice);
                                } else {
                                    throw new Error(notice.message || 'Failed to fetch notice');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        function confirmDelete(id) {
                            const modal = document.getElementById('confirmModal');
                            modal.style.display = 'flex';
                
                            document.getElementById('confirmMessage').textContent = 'Are you sure you want to delete this notice? This action cannot be undone.';
                
                            document.getElementById('confirmActionButton').onclick = function() {
                                deleteNotice(id);
                            };
                        }
                
                        async function deleteNotice(id) {
                            try {
                                const response = await fetch(`/notice/${id}`, {
                                    method: 'DELETE'
                                });
                
                                const result = await response.json();
                
                                if (response.ok) {
                                    alert('Notice deleted successfully!');
                                    document.getElementById(`notice-${id}`).remove();
                                    closeConfirmModal();
                                    
                                    // Update showing info
                                    updateShowingInfo();
                                } else {
                                    throw new Error(result.message || 'Failed to delete notice');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        async function toggleStatus(id, currentStatus) {
                            try {
                                const response = await fetch(`/notice/${id}/toggle`, {
                                    method: 'PATCH'
                                });
                
                                const result = await response.json();
                
                                if (response.ok) {
                                    // Update the UI without reloading
                                    const statusElement = document.querySelector(`#notice-${id} .st-status`);
                                    const statusText = document.querySelector(`#notice-${id} .st-status-text`);
                                    const toggleButton = document.querySelector(`#notice-${id} .st-toggle`);
                                    
                                    if (result.isActive) {
                                        statusElement.classList.remove('st-status-inactive');
                                        statusText.textContent = 'Active';
                                        toggleButton.classList.remove('inactive');
                                    } else {
                                        statusElement.classList.add('st-status-inactive');
                                        statusText.textContent = 'Inactive';
                                        toggleButton.classList.add('inactive');
                                    }
                                } else {
                                    throw new Error(result.message || 'Failed to update status');
                                }
                            } catch (error) {
                                console.error('Error:', error);
                                alert(error.message);
                            }
                        }
                
                        function closeConfirmModal() {
                            document.getElementById('confirmModal').style.display = 'none';
                        }
                
                        function updateShowingInfo() {
                            const noticeCount = document.querySelectorAll('.st-data-card').length;
                            document.querySelector('.st-page-info').textContent = `Showing 1-${noticeCount} of ${noticeCount} notices`;
                        }
                
                        // Close modals when clicking outside
                        window.onclick = function(event) {
                            const noticeModal = document.getElementById('noticeModal');
                            const confirmModal = document.getElementById('confirmModal');
                            
                            if (event.target === noticeModal) {
                                noticeModal.style.display = 'none';
                            }
                            if (event.target === confirmModal) {
                                confirmModal.style.display = 'none';
                            }
                        };
                
                        // Pagination function
                        function updatePagination() {
                            const entriesPerPage = document.getElementById('entriesPerPage').value;
                            // Implement pagination logic here
                            console.log(`Show ${entriesPerPage} entries per page`);
                        }
                    </script>
