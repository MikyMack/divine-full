                                                        <div class="st-card-header">
                                                            <% if (notice.posterUrl) { %>
                                                                <div class="st-card-icon">
                                                                    <img src="<%= notice.posterUrl %>" alt="<%= notice.title %>">
                                                                </div>
                                                            <% } %>
                                                            <div class="st-card-title">
                                                                <h3><%= notice.title %></h3>
                                                                <div class="st-card-subtitle">
                                                                    <span><%= new Date(notice.date).toLocaleDateString() %></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="st-card-body">
                                                            <div class="st-description">
                                                                <%= notice.description %>
                                                            </div>
                                                        </div>
                                                        <div class="st-card-footer">
                                                            <div class="st-status <%= notice.isActive ? '' : 'st-status-inactive' %>">
                                                                <div class="st-status-dot"></div>
                                                                <div class="st-status-text"><%= notice.isActive ? 'Active' : 'Inactive' %></div>
                                                            </div>
                                                            <div class="st-actions">
                                                                <button class="st-action-btn st-edit" title="Edit" onclick="editNotice('<%= notice._id %>')">✏️</button>
                                                                <button class="st-action-btn st-delete" title="Delete" onclick="confirmDelete('<%= notice._id %>')">🗑️</button>
                                                                <button class="st-action-btn st-toggle <%= notice.isActive ? '' : 'inactive' %>" 
                                                                    title="Toggle Status" onclick="toggleStatus('<%= notice._id %>', <%= notice.isActive %>)">✓</button>
