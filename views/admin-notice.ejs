                    <!-- Add/Edit Notice Modal -->
                    <div id="noticeModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <h4 id="modalTitle">Add New Notice</h4>
                            <form id="noticeForm" enctype="multipart/form-data">
                                <input type="hidden" id="noticeId" name="noticeId">
                                
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="text" id="title" name="title" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="date">Date</label>
                                    <input type="date" id="date" name="date" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea id="description" name="description" rows="4" required></textarea>
                                </div>
                                
                                <div class="form-group">
                                    <label for="notice">Notice Poster</label>
                                    <input type="file" id="notice" name="notice" accept="image/*">
                                    <div id="imagePreview" style="margin-top: 10px;"></div>
                                </div>
                                
                                <div class="form-actions">
                                    <button type="button" class="tf-button style-3" onclick="closeModal()">Cancel</button>
